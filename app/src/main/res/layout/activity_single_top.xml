<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sky.learnandroid.lauchmode.SingleTopActivity">


    <Button
        android:id="@+id/btn_start_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Self Again"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_start_standard_then_start_single_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Standard Then start Single Top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_self" />

</android.support.constraint.ConstraintLayout>
